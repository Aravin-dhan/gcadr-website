{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "gcadr_backend.settings",
    "PYTHONPATH": "./backend",
    "NEXT_PUBLIC_API_URL": "https://gcadr.vercel.app",
    "NEXT_PUBLIC_SITE_URL": "https://gcadr.vercel.app"
  },
  "functions": {
    "api/index.py": {
      "includeFiles": "backend/**"
    }
  }
}
